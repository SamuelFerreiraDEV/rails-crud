<h1>EDIT POST</h1>

<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, value: @post.title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body, value: @post.body %>
  </div>
  <%= form.submit "Edit Post" %>
<% end %>